<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapView" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/get_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_gravity="top|start"
                android:drawableLeft="@drawable/plane"
                android:background="@drawable/btn_green"
                android:onClick="getDistance"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/colorBlue"
                android:text="Air Distance" />

            <TextView
                android:id="@+id/get_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_gravity="top|start"
                android:background="@drawable/btn_green"
                android:onClick="getDistance"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/boy"
                android:drawablePadding="2dp"
                android:textSize="18sp"
                android:textColor="@color/colorBlue"
                android:text="select Children" />


            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
                <!--android:id="@+id/get_distance_floating"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:clickable="true"-->
                <!--android:layout_marginBottom="50dp"-->
                <!--android:onClick="getDistance"-->
                <!--android:layout_gravity="bottom|right"-->
                <!--android:backgroundTint="#FBFCFC "-->
                <!--android:src="@drawable/baseline_my_location_black_24dp" />-->


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom|right"
                android:backgroundTint="#FBFCFC "
                android:src="@drawable/boy" />

        </LinearLayout>






    </fragment>






</RelativeLayout>